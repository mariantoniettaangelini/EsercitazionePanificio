@{
    ViewData["Title"] = "Checkout Confermato";
}

<div class="container vh-100">
    <div class="row justify-content-center align-items-center h-100">
        <div class="col-md-6">
            <div class="card border-0 shadow" style="background-color: #fff3cd;">
                <div class="card-body">
                    <h2 class="card-title">Grazie per il tuo ordine, @ViewBag.CustomerName!</h2>
                    <p class="card-text">Il tuo ordine è in arrivo e sarà consegnato entro @ViewBag.TotalDeliveryTime minuti.</p>
                    <a asp-action="Index" asp-controller="Home" class="btn btn-warning">Torna alla home</a>
                </div>
            </div>
        </div>
    </div>
</div>
