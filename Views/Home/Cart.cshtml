@model List<Esercitazione.Models.Order>

@{
    ViewData["Title"] = "Il tuo carrello";
}

<h2>Il tuo carrello</h2>

@if (Model == null || !Model.Any())
{
    <p>Il tuo carrello è vuoto.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Prodotto</th>
                <th>Prezzo</th>
                <th>Quantità</th>
                <th>Totale</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Product.Name</td>
                    <td>@item.Product.Price.ToString("C")</td>
                    <td>
                        <input type="number" id="quantity-@item.OrderId" name="quantity" value="@item.Quantity" min="1" class="form-control d-inline w-auto" />
                    </td>
                    <td>@(item.Product.Price * item.Quantity) €</td>
                    <td>
                        <form asp-action="RemoveFromCart" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@item.OrderId" />
                            <button type="submit" class="btn-sm btn-danger" onclick="return confirm('Rimuovere questo prodotto dal carrello?');">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash-fill" viewBox="0 0 16 16">
                                    <path d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5M8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5m3 .5v7a.5.5 0 0 1-1 0" />
                                </svg>
                            </button>
                        </form>

                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="text-right">
        <strong>Totale complessivo:</strong>
        @Model.Sum(item => item.Product.Price * item.Quantity).ToString("C")
    </div>

    <div class="mt-3 text-right">
        <a asp-action="Checkout" asp-controller="Home" class="btn btn-success">Procedi al Checkout</a>
    </div>

}
